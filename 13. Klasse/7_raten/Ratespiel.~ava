
/**
 * Beschreiben Sie hier die Klasse Zahlenraten.
 * 
 * @author (Erik Barz) 
 * @version (20.11.09)
 */

public class Ratespiel
{
    //Versuche i
    private int i;
    //Objekt in Zahlenraten anlegen
    private Zahlenraten geheim;
    private boolean gewonnen;
    
    public Ratespiel()
    {
        geheim = new Zahlenraten(); 
        i=0;
    }

    public void starten()
    {
        i=0;
        gewonnen=false;
        geheim.neueZZ();
    }
    
    public String eingabe(int x)
    {
        String text = "";

        if (geheim.gleich(x))
        {
            text = "Sie haben gewonnen";
        }
        else
        {
            if (geheim.kleiner(x))
            {
                text = "ihre Zahl ist zu klein";
            }
            else
            {
                text = "ihre zahl ist zu groß";
            }
        }
            
        i=i+1;
        return text;

    }

   
    public boolean getGewonnen()
    {
        return gewonnen;
    }

   
   public int getVersuche()
   {
    return i;
    }
}
